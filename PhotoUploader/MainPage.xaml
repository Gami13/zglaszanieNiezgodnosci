<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhotoUploader.MainPage">

    <ScrollView >
        <FlexLayout Margin="45,20" HorizontalOptions="Center" VerticalOptions="StartAndExpand" Direction="Column">
            <Label Text="Wybierz rodzaj niezgodności:" HorizontalTextAlignment="Center" FontSize="18" Margin="0,20"/>
            <Button Text="W produkcji" BindingContext="InProduction" Clicked="navigateTo" Margin="0,5"/>
            <Button Text="Dostaw materiałów" BindingContext="MaterialDelivery" Clicked="navigateTo" Margin="0,5"/>
            <Button Text="Dostaw usług" BindingContext="Services" Clicked="navigateTo" Margin="0,5"/>
            <Button Text="Od klienta"  Margin="0,5"/>
            <Button Text="Systemowe"  Margin="0,5"/>



        </FlexLayout>
    </ScrollView>

</ContentPage>
